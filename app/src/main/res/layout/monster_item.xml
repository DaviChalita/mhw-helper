<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    app:cardElevation="10dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imageViewMonster"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textViewFire"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewMonster"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textViewMonster"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Monster" />

        <TextView
            android:id="@+id/textViewFire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Fire"
            app:layout_constraintBottom_toTopOf="@+id/imageViewFire"
            app:layout_constraintEnd_toEndOf="@+id/imageViewFire"
            app:layout_constraintStart_toStartOf="@+id/imageViewFire" />

        <ImageView
            android:id="@+id/imageViewFire"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageViewWater"
            app:layout_constraintStart_toStartOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/imageViewWater"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageViewThunder"
            app:layout_constraintStart_toEndOf="@+id/imageViewFire"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textViewWater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Water"
            app:layout_constraintBottom_toTopOf="@+id/imageViewWater"
            app:layout_constraintEnd_toEndOf="@+id/imageViewWater"
            app:layout_constraintStart_toStartOf="@+id/imageViewWater"
            app:layout_constraintTop_toTopOf="@+id/textViewFire" />

        <ImageView
            android:id="@+id/imageViewThunder"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageViewIce"
            app:layout_constraintStart_toEndOf="@+id/imageViewWater"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textViewThunder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Thunder"
            app:layout_constraintBottom_toTopOf="@+id/imageViewThunder"
            app:layout_constraintEnd_toEndOf="@+id/imageViewThunder"
            app:layout_constraintStart_toStartOf="@+id/imageViewThunder"
            app:layout_constraintTop_toTopOf="@+id/textViewWater" />

        <ImageView
            android:id="@+id/imageViewIce"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageViewDragon"
            app:layout_constraintStart_toEndOf="@+id/imageViewThunder"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textViewIce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Ice"
            app:layout_constraintBottom_toTopOf="@+id/imageViewIce"
            app:layout_constraintEnd_toEndOf="@+id/imageViewIce"
            app:layout_constraintStart_toStartOf="@+id/imageViewIce"
            app:layout_constraintTop_toTopOf="@+id/textViewThunder" />

        <ImageView
            android:id="@+id/imageViewDragon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageViewIce"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textViewDragon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Dragon"
            app:layout_constraintBottom_toTopOf="@+id/imageViewDragon"
            app:layout_constraintEnd_toEndOf="@+id/imageViewDragon"
            app:layout_constraintStart_toStartOf="@+id/imageViewDragon"
            app:layout_constraintTop_toTopOf="@+id/textViewIce" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>